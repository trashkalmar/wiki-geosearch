<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Toolbar" parent="android:Widget.Material.Toolbar">
        <item name="android:background">?android:colorPrimary</item>
        <item name="android:colorPrimary">?android:colorPrimary</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
    </style>

    <style name="AppTheme.ProgressMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
